{{#with FLOW.selectedControl.selectedSurvey as form}}
<div id="form01" class="aformContainer">
	<nav class="newSurveyNav">
		<ul>
			<li><a class="previewNewSurvey">Preview</a></li>
			<li><a class="deleteSurvey" {{action "deleteForm" target="FLOW.surveyControl"}}>Delete</a></li>
		</ul>
	</nav>
	<ul class="formSummary">
		<li>Version<span class="formVersion">1.0</span></li>
		<li>ID<span class="formID">{{form.keyId}}</span></li>
		<li>Questions<span class="formQuestionCount">0</span></li>
	</ul>
	<section class="formDetails">
		<h3>Form basics</h3>
		{{#if view.showFormBasics}}
			<a {{action "toggleShowFormBasics" target="this"}} class="showCollapse">Collapse</a>
			<form class="surveyDetailForm">
				<label>Form Title</label>
				{{view Ember.TextField valueBinding="form.code"}}
				<label>Form Description</label>
				{{view Ember.TextField valueBinding="form.description"}}
				<label>Manage</label>
				<nav class="newSurveyNav">
					<ul class="manageStuff">
						<li><a class="manageTranslations">Manage translations &gt;</a></li>
						<li><a class="manageNotifications">Manage notifications &gt;</a></li>
					</ul>
				</nav>
			</form>
		{{else}}
			<a {{action "toggleShowFormBasics" target="this"}} class="showCollapse">Show</a>
		{{/if}}
	</section>
	<section class="surveyForm">
		{{view FLOW.EditQuestionsView}}
	</section>
</div>
{{/with}}
