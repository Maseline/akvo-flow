
  {{#view FLOW.ProjectMainView}}
    <section class="topBar">
      <nav class="breadCrumb">
        <ul>
          <li>
            <a class="homeRoot" {{action "selectRootProject" target="FLOW.projectControl"}}>Home</a>
          </li>
          {{#each sg in FLOW.projectControl.breadCrumbs}}
            <li>
              <a {{action "selectProject" sg target="FLOW.projectControl"}}>{{sg.code}}</a>
            </li>
          {{/each}}
        </ul>
      </nav>
      {{#if view.projectListView}}
        {{#if FLOW.projectControl.moveTarget}}
          <nav class="menuTopbar actionHighLighted">
            <ul>
              <li><p>Moving <span>{{FLOW.projectControl.moveTarget.code}}</span> {{FLOW.projectControl.moveTargetType}}</p></li>
              <li><a class="moveAction" {{action "endMoveProject" target="FLOW.projectControl"}}>Drop <span class="assetHook">{{FLOW.projectControl.moveTargetType}}</span> here</a></li>
              <li><a class="redCancel " {{action "cancelMoveProject" target="FLOW.projectControl"}}>cancel</a></li>
            </ul>
          </nav>
        {{else}}
          <nav class="menuTopbar">
            <ul>
              <li><a class="editGroupName" href="#">Edit folder</a></li>
              <li><a class="addFolder" {{action "createProjectFolder" target="FLOW.projectControl"}}>Add folder</a></li>
              <li><a class="addSurvey" {{action "createProject" target="FLOW.projectControl"}}>Create new project</a></li>
            </ul>
          </nav>
        {{/if}}
      {{else}}
        <nav class="menuTopbar">
          <ul>
            <!-- TODO add noChanges if nothing has been changed -->
            <li><a class="saveProject">Save</a></li>
            {{#unless FLOW.projectControl.currentProject.published}}
              {{#if FLOW.projectControl.hasForms}}
                <li><a class="publishProjectBtn" {{action "publishProject" target="FLOW.projectControl"}}>Publish project</a></li>
              {{/if}}
            {{/unless}}
          </ul>
        </nav>
      {{/if}}
    </section>

  {{#if view.projectListView}}
    {{view FLOW.ProjectListView}}
  {{/if}}
  {{#if view.projectView}}
    {{view FLOW.ProjectView}}
  {{/if}}
{{/view}}
