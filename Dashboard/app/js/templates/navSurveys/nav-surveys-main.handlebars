
  <section class="topBar">
    <nav class="breadCrumb">
      <ul>
        {{#each sg in FLOW.projectControl.breadCrumbs}}
          <li>
            {{#if sg}}
              <a {{action "selectProject" sg target="FLOW.projectControl"}}>{{sg.code}}</a>
            {{else}}
              <a class="homeRoot" {{action "selectProject" sg target="FLOW.projectControl"}}>Home</a>
            {{/if}}
          </li>
        {{/each}}
      </ul>
    </nav>
    <nav class="menuTopbar">
      <ul>
        <li><a class="editGroupName" href="#">Edit folder</a></li>
        <li><a class="addFolder" {{action "createProjectFolder" target="FLOW.projectControl"}}>Add folder</a></li>
        <li><a class="addSurvey" href="#">Create a new project</a></li>
      </ul>
    </nav>
  </section>

  <div class="floats-in">
    <div id="pageWrap" class="widthConstraint belowHeader">
      <section id="allSurvey" class="surveysList">
        <ul>
          {{#each sg in FLOW.projectControl.currentFolders}}
              <li class="aSurvey aFolder">
                <a {{action "selectProject" sg target="FLOW.projectControl"}}>
                  <h2>{{sg.code}}</h2>
                </a>
              </li>
          {{/each}}
        </ul>
      </section>
    </div>
  </div>
