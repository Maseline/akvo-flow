

<div class="floats-in">
  <div id="pageWrap" class="widthConstraint belowHeader">
    <section id="allSurvey" class="surveysList">
      {{#view FLOW.ProjectList}}
        {{#each sg in FLOW.projectControl.currentFolders}}
            {{#view FLOW.ProjectItemView contentBinding="sg"}}
              {{#if view.isFolder}}
                <a {{action "toggleEditFolderName" sg target="this"}} class="editFolderName">
                  edit folder name
                </a>
                {{#if view.folderEdit}}
                  {{view FLOW.FolderEditView valueBinding="sg.code" contentBinding="sg"}}
                {{else}}
                  <a {{action "selectProject" sg target="FLOW.projectControl"}}>
                    <h2>{{sg.code}}</h2>
                  </a>
                {{/if}}
                <nav>
                  <ul>
                    <li class="deleteSurvey"><a {{action "deleteProject" sg target="FLOW.projectControl"}}>Delete</a></li>
                    <li class="moveSurvey"><a {{action "beginMoveProject" sg target="FLOW.projectControl"}}>Move</a></li>
                  </ul>
               </nav>
              {{else}}
                <a {{action "selectProject" sg target="FLOW.projectControl"}}>
                  <h2>{{sg.code}}</h2>
                </a>
                <ul class="surveyInfo floats-in">
                  <li class="dateCreated"><span>Created</span><p>{{view.created}}</p></li>
                  <li class="responseNumber"><span>Responses</span></li>
                  <li class="dateModified"><span>Modified</span><p>{{view.modified}}</li>
                  <li class="surveyType"><span>Type</span><p>
                    {{#if view.isPrivate}}
                      Private
                    {{else}}
                      Public
                    {{/if}}
                  </p></li>
                  <li class="surveyLanguage"><span>Language</span><p>{{view.language}}</p></li>
                </ul>
                <nav>
                  <ul>
                    <li class="editSurvey"><a {{action "selectProject" sg target="FLOW.projectControl"}}>Edit</a></li>
                    <li class="moveSurvey"><a {{action "beginMoveProject" sg target="FLOW.projectControl"}}>Move</a></li>
                    <li class="deleteSurvey"><a {{action "deleteProject" sg target="FLOW.projectControl"}}>Delete</a></li>
                    <li class="copySurvey" {{action "beginCopyProject" sg target="FLOW.projectControl"}}><a>Copy</a></li>
                  </ul>
                </nav>
              {{/if}}
            {{/view}}
        {{/each}}
      {{/view}}
    </section>
  </div>
</div>
