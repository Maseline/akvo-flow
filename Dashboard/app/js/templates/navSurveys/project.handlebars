
{{#view FLOW.Project}}
  <div class="floats-in">
    <div id="pageWrap" class="widthConstraint belowHeader">
      <section id="main" class="projectSection floats-in middleSection" role="main">
        <section id="" class="projectDetailsPanel">
          <span class="fontInfo">Project:</span><h2>{{FLOW.projectControl.currentProject.code}}</h2>
          <ul class="projectSummary">
            <li>Forms<span class="projectForm">{{view.formCount}}</span>
            </li>
            <li>Monitoring
              <span class="projectMonitoring">
                {{#if FLOW.projectControl.currentProject.monitoringGroup}}enabled{{else}}not enabled{{/if}}
              </span>
            </li>
            <li>Status:

              {{#if FLOW.projectControl.currentProject.published}}
                <span class="projectStatus">
                  Published
                </span>
              {{else}}
                <span class="projectStatus redColor">
                  {{#if view.hasForms}}
                    Not published
                  {{else}}
                    No forms
                  {{/if}}
                </span>
              {{/if}}
            </li>
          </ul>
          <section class="projectDetails">
            <h3>Projects basics</h3>
            <a {{action "toggleShowProjectDetails" target="this"}} class="showCollapse">
              {{#if view.showProjectDetails}}
                Collapse
              {{else}}
                Show
              {{/if}}
            </a>
            {{#if view.showProjectDetails}}
            <form class="projectDetailForm">
              <label>Project Title</label>{{view Ember.TextField id="projectTitle" valueBinding="FLOW.projectControl.currentProject.code"}}
              <label>Project Description</label>{{view Ember.TextField id="projectDescription" valueBinding="FLOW.projectControl.currentProject.description"}}

              <ul class="projectSelect floats-in">
                <li>
                  <label>Privacy Type:</label>
                  <select>
                    <option value="Public">Public</option>
                    <option value="Private">Private</option>
                  </select>
                </li>
                <li>
                  <label>Language:</label>
                  <select>
                    <option value="en">English</option>
                    <option value="fr">French</option>
                    <option value="es">Spanish</option>
                  </select>
                </li>
              </ul>
              <label for="enableMonitoring" class="labelcheckbox">
                <input type="checkbox" id="enableMonitoring">Enable Monitoting features
              </label>
            </form>
            {{/if}}
            {{#unless FLOW.projectControl.currentProject.published}}
              <a class="addMenuAction aBtn addNewForm inactive"
                {{action "publishProject" target="FLOW.projectControl"}}>Publish project</a>
            {{/unless}}
          </section>
          <section class="forms">
            {{#if view.hasForms}}
              <div id="tabs">
                <nav class="tabNav floats-in">
                  <ul>
                    {{#each form in FLOW.surveyControl}}
                      <li class="aFormTab"><a {{action "selectForm" form target="FLOW.surveyControl"}}>{{form.code}}</a></li>
                    {{/each}}
                    {{#if FLOW.projectControl.currentProject.monitoringGroup}}
                      <li class="newFormTab"><a href=""><span>+</span>Add new form</a></li>
                    {{/if}}
                  </ul>
                </nav>
                <section class="formsContainer">
                    <div id="form01"></div>
                </section>
              </div>
            {{else}}
              <ul>
                <li class="formList">
                  <p class="noForms">You have no forms in this project</p>
                </li>
              </ul>
              <div id="tabs">
                <nav class="tabNav floats-in">
                  <ul>
                    <li class="newFormTab"><a href=""><span>+</span>Add new form</a></li>
                  </ul>
                </nav>
              </div>
            {{/if}}
          </section>
        </section>
      </section>
    </div>
  </div>
{{/view}}
