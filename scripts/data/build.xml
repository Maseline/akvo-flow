<project default="compile">
  <property name="lib.dir"
            value="lib"/>

  <path id="classpath">
    <fileset dir="${lib.dir}" includes="**/*.jar"/>
  </path>

  <target name="compile">
    <mkdir dir="bin"/>
    <javac srcdir="src" destdir="bin">
      <classpath refid="classpath"/>
    </javac>
  </target>
</project>
